<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <solid android:color="?colorPrimaryDark" />
            <corners android:radius="@dimen/radius_item_content_4dp" />

        </shape>
    </item>

    <item>
        <clip
            android:clipOrientation="horizontal"
            android:gravity="start">

            <shape android:shape="rectangle">

                <gradient
                    android:angle="270"
                    android:centerColor="@color/colour_salmon"
                    android:endColor="@color/colour_gunmetal"
                    android:startColor="@color/colour_midnightExpress" />
                <corners android:radius="@dimen/radius_item_content_4dp" />

            </shape>

        </clip>
    </item>

</layer-list>
