<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <solid android:color="@color/colour_buttonBackground" />
            <stroke
                android:width="@dimen/width_all_stroke_1dp"
                android:color="@color/colour_buttonStroke" />

        </shape>
    </item>

    <item>
        <inset
            android:drawable="@drawable/ic_play"
            android:insetLeft="@dimen/padding_button_adjustment_24dp"
            android:insetTop="@dimen/padding_button_adjustment_22dp"
            android:insetRight="@dimen/padding_button_20dp"
            android:insetBottom="@dimen/padding_button_adjustment_22dp" />
    </item>

</layer-list>
