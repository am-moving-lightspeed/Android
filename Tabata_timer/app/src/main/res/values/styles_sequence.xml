<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sequence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shapes_sequence</item>
    </style>

    <style name="sequenceCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/libraryItem_marginHorizontal</item>
        <item name="android:layout_marginRight">@dimen/libraryItem_marginHorizontal</item>
        <item name="android:layout_marginTop">@dimen/libraryItem_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/libraryItem_marginVertical</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="sequenceContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/libraryItem_content_marginBottom</item>
    </style>

    <style name="sequenceContent.text">
        <item name="android:gravity">left</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="sequenceContent.text.header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="sequenceContent.text.description">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sequenceContent.text.additionalInfo">
        <item name="android:layout_marginBottom">@dimen/libraryItem_content_marginBottomLess</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sequenceContent.separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/shapes_separator</item>
    </style>

</resources>