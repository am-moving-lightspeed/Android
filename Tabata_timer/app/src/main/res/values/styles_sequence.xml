<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sequence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shapes_sequence</item>
    </style>

    <style name="sequenceCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/sequence_marginBottom</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="sequenceContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/sequenceContent_marginBottom</item>
    </style>

    <style name="sequenceContent.text">
        <item name="android:gravity">left</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sequenceContent.text.header">
        <item name="android:textSize">@dimen/sequenceHeader_textSize</item>
    </style>

    <style name="sequenceContent.text.description">
        <item name="android:textSize">@dimen/sequenceDescription_textSize</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="sequenceContent.text.additionalInfo">
        <item name="android:layout_marginBottom">@dimen/sequenceContent_marginBottomLess</item>
        <item name="android:textSize">@dimen/sequenceAdditionalInfo_textSize</item>
    </style>

    <style name="sequenceContent.separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/shapes_separator</item>
    </style>

</resources>