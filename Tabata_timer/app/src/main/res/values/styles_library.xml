<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="librarySequence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shapes_library_item</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="librarySequence_content">
        <item name="android:layout_marginBottom">@dimen/libraryItem_content_marginBottom</item>
    </style>

    <style name="librarySequence_content.text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="librarySequence_content.text.header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="librarySequence_content.text.description">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="librarySequence_content.text.additional_info">
        <item name="android:layout_marginBottom">@dimen/libraryItem_content_marginBottomLess</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="librarySequence_content.separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/shapes_separator</item>
    </style>

</resources>