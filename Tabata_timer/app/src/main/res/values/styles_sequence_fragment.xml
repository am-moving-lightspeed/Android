<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stagesRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">@dimen/stagesRecyclerView_paddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/stagesRecyclerView_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/stagesRecyclerView_paddingTop</item>
        <item name="android:paddingBottom">@dimen/stagesRecyclerView_paddingBottom</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="actionButtonBarBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shapes_action_buttons_bar_base</item>
    </style>

    <style name="actionButtonFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/actionButtonFrame_padding</item>
        <item name="android:paddingEnd">@dimen/actionButtonFrame_padding</item>
        <item name="android:paddingTop">@dimen/actionButtonFrame_padding</item>
        <item name="android:paddingBottom">@dimen/actionButtonFrame_padding</item>
        <item name="android:background">@drawable/shapes_action_buttons_bar_frames</item>
    </style>

</resources>