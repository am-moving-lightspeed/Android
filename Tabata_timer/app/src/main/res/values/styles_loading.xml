<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabataTimer.Loading" />

    <style name="TabataTimer.Loading.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/loading_background</item>
    </style>

    <style name="TabataTimer.Loading.TextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabataTimer.Loading.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mexcellent3d</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/colour_cornflowerBlue</item>
    </style>

</resources>
