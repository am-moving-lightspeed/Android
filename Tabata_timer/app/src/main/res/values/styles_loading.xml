<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loadingBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shapes_loading_bg</item>
    </style>

    <style name="loadingTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="loadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mexcellent3d</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

</resources>