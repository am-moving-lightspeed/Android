<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationMenuBodyContent" parent="android:Widget.TextView">
        <item name="fontFamily">@font/droid_sans</item>
    </style>

    <style name="navigationMenuHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigationMenuHeader_height</item>
        <item name="android:paddingLeft">@dimen/activity_marginHorizontal</item>
        <item name="android:paddingRight">@dimen/activity_marginHorizontal</item>
        <item name="android:paddingTop">@dimen/activity_marginVertical</item>
        <item name="android:paddingBottom">@dimen/activity_marginVertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shapes_navigation_menu_header</item>
    </style>

    <style name="navigationMenuHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/navigationMenuHeaderContent_spacing</item>
        <item name="fontFamily">@font/droid_sans</item>
    </style>

    <style name="navigationMenuHeaderContent.sequenceHeader">
        <item name="android:textSize">@dimen/sequenceHeader_textSize</item>
    </style>

    <style name="navigationMenuHeaderContent.sequenceStage">
        <item name="android:textSize">@dimen/sequenceAdditionalInfo_textSize</item>
    </style>

    <style name="navigationMenuHeaderContent.noSpacing">
        <item name="android:paddingTop">0dp</item>
    </style>

</resources>