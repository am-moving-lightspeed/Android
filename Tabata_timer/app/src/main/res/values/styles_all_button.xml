        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_all_8dp</item>
        <item name="android:padding">@dimen/padding_all_buttonFrame_4dp</item>
        <item name="android:paddingEnd">@dimen/padding_all_buttonFrame_8dp</item>
        <item name="android:background">@drawable/all_button_frame</item>
