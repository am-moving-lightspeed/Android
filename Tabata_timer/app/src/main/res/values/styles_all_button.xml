    <style name="TabataTimer.Btn.Default.Add">
        <item name="android:background">@drawable/btn_add</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>

    <style name="TabataTimer.Btn.Default.Delete">
        <item name="android:background">@drawable/btn_delete</item>
        <item name="srcCompat">@drawable/ic_delete</item>
    </style>

    <style name="TabataTimer.Btn.Default.Edit">
        <item name="android:background">@drawable/btn_edit</item>
