<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fabContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">1dp</item>
    </style>

    <style name="fab.addSequence">
        <item name="srcCompat">@drawable/ic_add_sequence</item>
        <item name="backgroundTint">@color/colorViolet</item>
        <item name="android:backgroundTint">@color/colorVioletDark</item>
    </style>

    <style name="fab.deleteSequence">
        <item name="srcCompat">@drawable/ic_delete_sequence</item>
        <item name="backgroundTint">@color/colorTerracotta</item>
        <item name="android:backgroundTint">@color/colorTerracottaDim</item>
    </style>

    <style name="fab.editSequence">
        <item name="srcCompat">@drawable/ic_edit_sequence</item>
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:backgroundTint">@color/colorBlueDark</item>
    </style>

</resources>