<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fabFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/fabFrame_marginBottom</item>
        <item name="android:paddingStart">@dimen/actionButtonFrame_padding</item>
        <item name="android:paddingEnd">@dimen/fabFrame_paddingEnd</item>
        <item name="android:paddingTop">@dimen/actionButtonFrame_padding</item>
        <item name="android:paddingBottom">@dimen/actionButtonFrame_padding</item>
        <item name="android:background">@drawable/shapes_fab_bar_item</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="borderWidth">1dp</item>
    </style>

    <style name="fab.addSequence">
        <item name="srcCompat">@drawable/ic_add_sequence</item>
        <item name="backgroundTint">@color/colorViolet</item>
        <item name="android:backgroundTint">@color/colorVioletDark</item>
    </style>

    <style name="fab.deleteSequence">
        <item name="srcCompat">@drawable/ic_delete_sequence</item>
        <item name="backgroundTint">@color/colorTerracotta</item>
        <item name="android:backgroundTint">@color/colorTerracottaDim</item>
    </style>

    <style name="fab.editSequence">
        <item name="srcCompat">@drawable/ic_edit_sequence</item>
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:backgroundTint">@color/colorBlueDark</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="btn.playSequence">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/shapes_action_button_play</item>
        <item name="srcCompat">@drawable/ic_play_sequence</item>
    </style>

    <style name="btn.stopSequence">
        <item name="android:background">@drawable/shapes_action_button_stop</item>
        <item name="android:src">@drawable/ic_stop_sequence</item>
    </style>

    <style name="btn.restartSequence">
        <item name="android:background">@drawable/shapes_action_button_restart</item>
        <item name="srcCompat">@drawable/ic_restart_stage</item>
    </style>

</resources>