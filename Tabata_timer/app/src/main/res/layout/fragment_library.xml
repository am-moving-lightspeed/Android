<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/libraryBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/librarySequencesList"
        style="@style/libraryContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.gallery.LibraryFragment">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        style="@style/fabContainer"
        tools:ignore="MissingConstraints">
        <!-- Constraints are defined in the style. -->

        <include layout="@layout/action_button_add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>