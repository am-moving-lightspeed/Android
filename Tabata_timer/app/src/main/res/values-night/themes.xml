<resources>

    <style name="DarkTheme" parent="MainTheme" />

    <style name="MainTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Colours -->
        <item name="colorPrimary">@color/colour_blackPearl</item>
        <item name="colorPrimaryDark">@color/colour_blackPearlDarker</item>
        <item name="colorAccent">@color/colour_salmon</item>

        <item name="android:windowBackground">@color/colour_blackPearlDarker</item>

        <item name="android:textColor">@color/colour_heather</item>
        <item name="android:textSize">@dimen/textSize_default</item>
        <item name="android:fontFamily">@font/droid_sans</item>

    </style>

    <style name="MainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <!-- Holders -->
    <color name="colour_strokeDefault">@color/colour_gunmetal</color>

    <color name="colour_itemBackgroundDefault">@color/colour_blackPearl</color>

    <color name="colour_buttonBackground">@color/colour_midnightExpress</color>
    <color name="colour_buttonBackgroundBlueHue">@color/colour_midnightExpress</color>
    <color name="colour_buttonBackgroundRedHue">@color/colour_salmonDim</color>
    <color name="colour_buttonBarBackground">@color/colour_midnightExpress</color>

</resources>
