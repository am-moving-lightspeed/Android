<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BattleShips.Statistics" parent="BattleShips.Default" />

    <style name="BattleShips.Statistics.Background" parent="BattleShips.Default.Background" />

    <style name="BattleShips.Statistics.Header" parent="BattleShips.Default.Header">
        <item name="android:textSize">@dimen/textSize_all_52sp</item>
    </style>

    <style name="BattleShips.Statistics.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_all_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_all_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_all_16dp</item>
    </style>

    <style name="BattleShips.Statistics.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BattleShips.Statistics.ViewHolder" />

    <style name="BattleShips.Statistics.ViewHolder.Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_all_24dp</item>
        <item name="android:padding">@dimen/padding_all_12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BattleShips.Statistics.ViewHolder.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_all_12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_all_small</item>
    </style>

    <style name="BattleShips.Statistics.ViewHolder.Text.Header">
        <item name="android:textSize">@dimen/textSize_all_large</item>
    </style>

    <style name="BattleShips.Statistics.ViewHolder.Text.DateTime">
        <item name="android:textSize">@dimen/textSize_all_extraSmall</item>
    </style>

    <style name="BattleShips.Statistics.ViewHolder.Text.Names">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
