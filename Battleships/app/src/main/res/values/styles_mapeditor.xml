<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BattleShips.MapEditor" parent="BattleShips.Default" />

    <style name="BattleShips.MapEditor.Background" parent="BattleShips.Default.Background" />

    <style name="BattleShips.MapEditor.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_all_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_all_16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BattleShips.MapEditor.Grid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">10</item>
        <item name="android:rowCount">10</item>
    </style>

</resources>
