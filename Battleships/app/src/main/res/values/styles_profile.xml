<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BattleShips.Profile" parent="BattleShips.Default" />

    <style name="BattleShips.Profile.Background" parent="BattleShips.Default.Background" />

    <style name="BattleShips.Profile.CIV">
        <item name="android:layout_width">@dimen/width_all_240dp</item>
        <item name="android:layout_height">@dimen/height_all_240dp</item>
        <item name="android:layout_margin">@dimen/margin_all_24dp</item>
        <item name="civ_border_color">@color/colour_lightSeaGreen</item>
        <item name="civ_border_width">2dp</item>
    </style>

    <style name="BattleShips.Profile.InfoContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_all_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_all_24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BattleShips.Profile.Username">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_all_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BattleShips.Profile.Button" parent="BattleShips.Default.Button" />

</resources>
