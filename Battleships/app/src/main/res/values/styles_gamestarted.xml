<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BattleShips.GameStarted" parent="BattleShips.Default" />

    <style name="BattleShips.GameStarted.Background" parent="BattleShips.Default.Background" />

    <style name="BattleShips.GameStarted.Header" parent="BattleShips.Default.Header" />

    <style name="BattleShips.GameStarted.ButtonsBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_all_20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BattleShips.GameStarted.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize_all_extraSmall</item>
    </style>

    <style name="BattleShips.GameStarted.Button.AlternativeStart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_all_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_all_20dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BattleShips.GameStarted.EditText" parent="BattleShips.Default.EditText">
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
