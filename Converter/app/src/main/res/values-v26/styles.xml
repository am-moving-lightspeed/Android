<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arista_pro</item>
    </style>

    <style name="unitFrameTextBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/arista_pro</item>
    </style>

    <style name="editTextCustom">
        <item name="android:background">@color/colorBlackAlternativeSpecific</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:inputType">none</item>
        <item name="android:autofillHints">none</item>
        <item name="android:textSize">40sp</item>
        <item name="android:hint">0</item>
    </style>

    <style name="keyboardButtonExtended" parent="keyboardButton">
        <item name="android:textColor">@color/colorOrangeSpecific</item>
        <item name="android:fontFamily">@font/arista_pro</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>